{
  "id": "users",
  "title": "User Management",
  "description": "Registry for all system users, including their personal info, assigned roles, and account status.",
  "route": "/users",
  "entity": "User",
  "icon": "UserCog",
  "version": "1.0.0",

  "permissions": {
    "view": ["Admin", "HR"],
    "create": ["Admin", "HR"],
    "edit": ["Admin", "HR"],
    "delete": ["Admin"]
  },

  "api": {
    "list": "/api/users",
    "get": "/api/users/:id",
    "create": "/api/users",
    "update": "/api/users/:id",
    "delete": "/api/users/:id",
    "statusToggle": "/api/users/:id/status"
  },

  "fields": [
    { "name": "id", "label": "User ID", "type": "uuid", "autoGenerated": true, "primary": true },
    { "name": "employeeCode", "label": "Employee Code", "type": "string", "placeholder": "EMP-001", "unique": true, "showInList": true },
    { "name": "fullName", "label": "Full Name", "type": "string", "required": true, "showInList": true },
    { "name": "email", "label": "Email", "type": "email", "required": true, "showInList": true },
    { "name": "phone", "label": "Phone Number", "type": "string", "placeholder": "+91 9876543210", "required": true, "showInList": true },
    { "name": "roleId", "label": "Role", "type": "relation", "relationEntity": "roles", "relationField": "roleName", "required": true, "showInList": true },
    { "name": "departmentId", "label": "Department", "type": "relation", "relationEntity": "departments", "relationField": "name", "showInList": true },
    { "name": "gender", "label": "Gender", "type": "enum", "options": ["MALE", "FEMALE", "OTHER"], "widget": "select", "showInList": true },
    { "name": "dateOfJoining", "label": "Joining Date", "type": "date", "showInList": true },
    { "name": "isActive", "label": "Active", "type": "boolean", "default": true, "widget": "toggle", "showInList": true },
    { "name": "photoUrl", "label": "Profile Picture", "type": "image", "showInList": false },
    { "name": "address", "label": "Address", "type": "textarea", "showInList": false },
    { "name": "createdAt", "label": "Created At", "type": "datetime", "readOnly": true },
    { "name": "updatedAt", "label": "Updated At", "type": "datetime", "readOnly": true }
  ],

  "relations": [
    { "entity": "roles", "type": "ManyToOne", "foreignKey": "roleId" },
    { "entity": "departments", "type": "ManyToOne", "foreignKey": "departmentId" }
  ],

  "ui": {
    "listView": {
      "title": "User Directory",
      "columns": ["employeeCode", "fullName", "email", "roleId", "departmentId", "isActive"],
      "filters": ["roleId", "departmentId", "isActive"],
      "searchFields": ["fullName", "email", "employeeCode"],
      "actions": ["view", "edit", "delete", "toggleStatus"]
    },
    "formView": {
      "title": "Add / Edit User",
      "layout": [
        ["employeeCode", "fullName"],
        ["email", "phone"],
        ["roleId", "departmentId"],
        ["gender", "dateOfJoining"],
        ["isActive"]
      ],
      "actions": [
        {
          "id": "saveUser",
          "label": "Save User",
          "type": "submit",
          "endpoint": "/api/users",
          "method": "POST",
          "successMessage": "User details saved successfully."
        },
        { "id": "cancel", "label": "Cancel", "type": "cancel" }
      ]
    },
    "detailView": {
      "title": "User Details",
      "layout": [
        ["fullName", "email", "phone"],
        ["roleId", "departmentId"],
        ["gender", "dateOfJoining"],
        ["address"]
      ],
      "actions": ["edit", "delete"]
    }
  },

  "actions": [
    {
      "id": "toggleStatus",
      "label": "Activate / Deactivate",
      "type": "action",
      "endpoint": "/api/users/:id/status",
      "method": "PATCH",
      "successMessage": "User status updated."
    }
  ],

  "reasoning": {
    "businessLogic": "Each user is assigned a role and department for access control. User records drive authentication and permission systems. HR and Admin roles manage these accounts.",
    "uiLogic": "The Users page allows role-based filtering and quick activation toggles. Form layout ensures easy management of contact and access information."
  }
}
