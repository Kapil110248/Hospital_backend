{
  "id": "labtechnicians",
  "title": "Lab Technicians",
  "description": "Registry for managing laboratory technicians responsible for diagnostic tests and sample handling.",
  "route": "/labtechnicians",
  "icon": "TestTube",
  "entity": "LabTechnician",
  "version": "1.0.0",

  "permissions": {
    "view": ["Admin", "Receptionist", "LabTechnician"],
    "create": ["Admin"],
    "edit": ["Admin"],
    "delete": ["Admin"]
  },

  "api": {
    "list": "/api/labtechnicians",
    "get": "/api/labtechnicians/:id",
    "create": "/api/labtechnicians",
    "update": "/api/labtechnicians/:id",
    "delete": "/api/labtechnicians/:id"
  },

  "fields": [
    {
      "name": "id",
      "label": "Technician ID",
      "type": "uuid",
      "primary": true,
      "autoGenerated": true,
      "showInList": false
    },
    {
      "name": "technicianCode",
      "label": "Technician Code",
      "type": "string",
      "required": true,
      "unique": true,
      "placeholder": "LABT-001",
      "showInList": true,
      "sortable": true
    },
    {
      "name": "firstName",
      "label": "First Name",
      "type": "string",
      "required": true,
      "placeholder": "Enter first name",
      "validation": { "pattern": "^[A-Za-z]+$" },
      "showInList": true
    },
    {
      "name": "lastName",
      "label": "Last Name",
      "type": "string",
      "placeholder": "Enter last name",
      "showInList": true
    },
    {
      "name": "gender",
      "label": "Gender",
      "type": "enum",
      "options": ["MALE", "FEMALE", "OTHER"],
      "widget": "select",
      "required": true,
      "showInList": true
    },
    {
      "name": "qualification",
      "label": "Qualification",
      "type": "string",
      "placeholder": "DMLT, BMLT, MLT, etc.",
      "showInList": true
    },
    {
      "name": "experienceYears",
      "label": "Experience (Years)",
      "type": "number",
      "default": 0,
      "min": 0,
      "max": 40,
      "showInList": true
    },
    {
      "name": "departmentId",
      "label": "Department",
      "type": "relation",
      "relationEntity": "departments",
      "relationField": "name",
      "widget": "select",
      "required": true,
      "showInList": true
    },
    {
      "name": "specialization",
      "label": "Specialization",
      "type": "enum",
      "options": ["Pathology", "Microbiology", "Biochemistry", "Hematology", "Radiology"],
      "widget": "select",
      "showInList": true,
      "filterable": true
    },
    {
      "name": "assignedLabId",
      "label": "Assigned Lab",
      "type": "relation",
      "relationEntity": "laboratories",
      "relationField": "labName",
      "widget": "select",
      "showInList": true
    },
    {
      "name": "contactNumber",
      "label": "Phone",
      "type": "string",
      "validation": { "pattern": "^[0-9]{10,15}$" },
      "placeholder": "+91 9876543210",
      "showInList": true
    },
    {
      "name": "email",
      "label": "Email",
      "type": "email",
      "showInList": true
    },
    {
      "name": "shiftSchedule",
      "label": "Shift Schedule",
      "type": "object",
      "widget": "schedule",
      "fields": [
        { "name": "shiftType", "label": "Shift Type", "type": "enum", "options": ["Morning", "Evening", "Night"] },
        { "name": "startTime", "label": "Start Time", "type": "time" },
        { "name": "endTime", "label": "End Time", "type": "time" }
      ]
    },
    {
      "name": "isActive",
      "label": "Active",
      "type": "boolean",
      "default": true,
      "widget": "toggle",
      "showInList": true,
      "filterable": true
    },
    {
      "name": "createdAt",
      "label": "Created At",
      "type": "datetime",
      "readOnly": true,
      "showInList": true
    },
    {
      "name": "updatedAt",
      "label": "Updated At",
      "type": "datetime",
      "readOnly": true
    }
  ],

  "relations": [
    { "entity": "departments", "type": "ManyToOne", "foreignKey": "departmentId" },
    { "entity": "laboratories", "type": "ManyToOne", "foreignKey": "assignedLabId" },
    { "entity": "labtests", "type": "OneToMany", "foreignKey": "technicianId" },
    { "entity": "testresults", "type": "OneToMany", "foreignKey": "technicianId" }
  ],

  "ui": {
    "listView": {
      "title": "Lab Technicians",
      "columns": ["technicianCode", "firstName", "lastName", "specialization", "departmentId", "assignedLabId", "isActive"],
      "searchFields": ["technicianCode", "firstName", "lastName", "specialization", "email"],
      "filters": ["specialization", "departmentId", "isActive"],
      "actions": ["view", "edit", "delete"]
    },
    "formView": {
      "title": "Add / Edit Lab Technician",
      "layout": [
        ["technicianCode", "firstName", "lastName"],
        ["gender", "qualification", "experienceYears"],
        ["departmentId", "specialization", "assignedLabId"],
        ["contactNumber", "email"],
        ["shiftSchedule"],
        ["isActive"]
      ],
      "actions": ["save", "reset", "cancel"]
    },
    "detailView": {
      "title": "Technician Profile",
      "sections": [
        {
          "title": "Basic Information",
          "fields": ["technicianCode", "firstName", "lastName", "gender", "qualification", "experienceYears"]
        },
        {
          "title": "Work & Assignment",
          "fields": ["departmentId", "specialization", "assignedLabId", "shiftSchedule.shiftType", "shiftSchedule.startTime", "shiftSchedule.endTime"]
        }
      ]
    }
  },

  "actions": [
    {
      "id": "addTechnician",
      "label": "Add Technician",
      "type": "create",
      "endpoint": "/api/labtechnicians",
      "method": "POST",
      "successMessage": "Technician added successfully"
    },
    {
      "id": "updateTechnician",
      "label": "Update Technician",
      "type": "edit",
      "endpoint": "/api/labtechnicians/:id",
      "method": "PUT",
      "successMessage": "Technician details updated"
    },
    {
      "id": "toggleStatus",
      "label": "Activate / Deactivate",
      "type": "toggle",
      "endpoint": "/api/labtechnicians/:id/status",
      "method": "PATCH",
      "successMessage": "Technician status updated"
    }
  ],

  "reasoning": {
    "businessLogic": "Lab Technicians perform diagnostic tests, manage laboratory samples, and record results. Each technician belongs to a department and specific lab for accountability and scheduling.",
    "uiLogic": "This module integrates with the Labs and Test Results modules, allowing admins to assign, schedule, and monitor technicians. The UI auto-generates using dynamic form layouts and schedule widgets."
  }
}
