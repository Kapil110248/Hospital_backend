{
  "id": "nurses",
  "title": "Nurses",
  "description": "Registry for nurses including department, assigned ward, duty schedule, experience, and linked patient care records.",
  "route": "/nurses",
  "icon": "UserNurse",
  "entity": "Nurse",
  "version": "1.0.0",

  "permissions": {
    "view": ["Admin", "Doctor", "Receptionist"],
    "create": ["Admin"],
    "edit": ["Admin"],
    "delete": ["Admin"]
  },

  "api": {
    "list": "/api/nurses",
    "get": "/api/nurses/:id",
    "create": "/api/nurses",
    "update": "/api/nurses/:id",
    "delete": "/api/nurses/:id"
  },

  "fields": [
    {
      "name": "id",
      "label": "Nurse ID",
      "type": "uuid",
      "primary": true,
      "autoGenerated": true,
      "showInList": false
    },
    {
      "name": "nurseCode",
      "label": "Nurse Code",
      "type": "string",
      "required": true,
      "unique": true,
      "placeholder": "NUR-001",
      "showInList": true,
      "sortable": true
    },
    {
      "name": "firstName",
      "label": "First Name",
      "type": "string",
      "required": true,
      "placeholder": "Enter first name",
      "validation": { "pattern": "^[A-Za-z]+$" },
      "showInList": true
    },
    {
      "name": "lastName",
      "label": "Last Name",
      "type": "string",
      "placeholder": "Enter last name",
      "showInList": true
    },
    {
      "name": "gender",
      "label": "Gender",
      "type": "enum",
      "options": ["MALE", "FEMALE", "OTHER"],
      "widget": "select",
      "required": true,
      "showInList": true
    },
    {
      "name": "departmentId",
      "label": "Department",
      "type": "relation",
      "relationEntity": "departments",
      "relationField": "name",
      "widget": "select",
      "required": true,
      "showInList": true,
      "filterable": true
    },
    {
      "name": "wardAssigned",
      "label": "Assigned Ward / Unit",
      "type": "string",
      "placeholder": "ICU, General Ward, Maternity, etc.",
      "showInList": true
    },
    {
      "name": "qualification",
      "label": "Qualification",
      "type": "string",
      "placeholder": "B.Sc Nursing, GNM, ANM, etc."
    },
    {
      "name": "experienceYears",
      "label": "Experience (Years)",
      "type": "number",
      "min": 0,
      "max": 60,
      "default": 0,
      "showInList": true
    },
    {
      "name": "dutySchedule",
      "label": "Duty Schedule",
      "type": "object",
      "widget": "schedule",
      "fields": [
        { "name": "shiftType", "label": "Shift Type", "type": "enum", "options": ["Morning", "Evening", "Night"] },
        { "name": "startTime", "label": "Start Time", "type": "time" },
        { "name": "endTime", "label": "End Time", "type": "time" }
      ]
    },
    {
      "name": "contactNumber",
      "label": "Phone",
      "type": "string",
      "validation": { "pattern": "^[0-9]{10,15}$" },
      "placeholder": "+91 9876543210",
      "showInList": true
    },
    {
      "name": "email",
      "label": "Email",
      "type": "email",
      "showInList": true
    },
    {
      "name": "supervisorId",
      "label": "Reporting Doctor",
      "type": "relation",
      "relationEntity": "doctors",
      "relationField": "doctorCode",
      "widget": "select",
      "showInList": true
    },
    {
      "name": "isActive",
      "label": "Active",
      "type": "boolean",
      "default": true,
      "widget": "toggle",
      "showInList": true,
      "filterable": true
    },
    {
      "name": "createdAt",
      "label": "Created At",
      "type": "datetime",
      "readOnly": true,
      "showInList": true,
      "sortable": true
    },
    {
      "name": "updatedAt",
      "label": "Updated At",
      "type": "datetime",
      "readOnly": true
    }
  ],

  "relations": [
    { "entity": "departments", "type": "ManyToOne", "foreignKey": "departmentId" },
    { "entity": "doctors", "type": "ManyToOne", "foreignKey": "supervisorId" },
    { "entity": "patients", "type": "ManyToMany", "foreignKey": "nurseId" },
    { "entity": "staffattendance", "type": "OneToMany", "foreignKey": "nurseId" }
  ],

  "ui": {
    "listView": {
      "title": "Nurses Directory",
      "columns": ["nurseCode", "firstName", "lastName", "departmentId", "wardAssigned", "experienceYears", "isActive"],
      "searchFields": ["nurseCode", "firstName", "lastName", "departmentId", "wardAssigned"],
      "filters": ["departmentId", "wardAssigned", "isActive"],
      "actions": ["view", "edit", "delete"]
    },
    "formView": {
      "title": "Add / Edit Nurse",
      "layout": [
        ["nurseCode", "firstName", "lastName"],
        ["gender", "qualification", "experienceYears"],
        ["departmentId", "wardAssigned", "supervisorId"],
        ["dutySchedule.shiftType", "dutySchedule.startTime", "dutySchedule.endTime"],
        ["contactNumber", "email"],
        ["isActive"]
      ],
      "actions": ["save", "reset", "cancel"]
    },
    "detailView": {
      "title": "Nurse Profile",
      "sections": [
        {
          "title": "Personal Information",
          "fields": ["nurseCode", "firstName", "lastName", "gender", "qualification", "experienceYears"]
        },
        {
          "title": "Assignment Details",
          "fields": ["departmentId", "wardAssigned", "supervisorId"]
        },
        {
          "title": "Duty Schedule",
          "fields": ["dutySchedule.shiftType", "dutySchedule.startTime", "dutySchedule.endTime"]
        }
      ]
    }
  },

  "actions": [
    {
      "id": "addNurse",
      "label": "Add Nurse",
      "type": "create",
      "endpoint": "/api/nurses",
      "method": "POST",
      "successMessage": "Nurse added successfully"
    },
    {
      "id": "updateNurse",
      "label": "Update Nurse",
      "type": "edit",
      "endpoint": "/api/nurses/:id",
      "method": "PUT",
      "successMessage": "Nurse details updated"
    },
    {
      "id": "toggleStatus",
      "label": "Activate / Deactivate",
      "type": "toggle",
      "endpoint": "/api/nurses/:id/status",
      "method": "PATCH",
      "successMessage": "Nurse status updated"
    }
  ],

  "reasoning": {
    "businessLogic": "Nurses form the backbone of patient care, working under departments and reporting to doctors. Their schedules and ward assignments are used for staff attendance, patient monitoring, and shift management modules.",
    "uiLogic": "Admins manage nurse onboarding and scheduling. Doctors can view their assigned nurses. The interface integrates with patient and attendance registries, reflecting real-time duty allocations."
  }
}
