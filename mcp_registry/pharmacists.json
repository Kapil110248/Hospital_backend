{
  "id": "pharmacists",
  "title": "Pharmacists",
  "description": "Registry for pharmacists handling medicine inventory, prescriptions, and dispensing logs.",
  "route": "/pharmacists",
  "icon": "Pill",
  "entity": "Pharmacist",
  "version": "1.0.0",

  "permissions": {
    "view": ["Admin", "Receptionist", "Pharmacist"],
    "create": ["Admin"],
    "edit": ["Admin"],
    "delete": ["Admin"]
  },

  "api": {
    "list": "/api/pharmacists",
    "get": "/api/pharmacists/:id",
    "create": "/api/pharmacists",
    "update": "/api/pharmacists/:id",
    "delete": "/api/pharmacists/:id"
  },

  "fields": [
    {
      "name": "id",
      "label": "Pharmacist ID",
      "type": "uuid",
      "primary": true,
      "autoGenerated": true,
      "showInList": false
    },
    {
      "name": "pharmacistCode",
      "label": "Pharmacist Code",
      "type": "string",
      "required": true,
      "unique": true,
      "placeholder": "PHM-001",
      "showInList": true,
      "sortable": true
    },
    {
      "name": "firstName",
      "label": "First Name",
      "type": "string",
      "required": true,
      "placeholder": "Enter first name",
      "validation": { "pattern": "^[A-Za-z]+$" },
      "showInList": true
    },
    {
      "name": "lastName",
      "label": "Last Name",
      "type": "string",
      "placeholder": "Enter last name",
      "showInList": true
    },
    {
      "name": "gender",
      "label": "Gender",
      "type": "enum",
      "options": ["MALE", "FEMALE", "OTHER"],
      "widget": "select",
      "required": true,
      "showInList": true
    },
    {
      "name": "licenseNumber",
      "label": "License Number",
      "type": "string",
      "required": true,
      "placeholder": "Enter pharmacist license ID",
      "showInList": true,
      "filterable": true
    },
    {
      "name": "qualification",
      "label": "Qualification",
      "type": "string",
      "placeholder": "B.Pharm, M.Pharm, Pharm.D, etc."
    },
    {
      "name": "experienceYears",
      "label": "Experience (Years)",
      "type": "number",
      "min": 0,
      "max": 50,
      "default": 0,
      "showInList": true
    },
    {
      "name": "departmentId",
      "label": "Department",
      "type": "relation",
      "relationEntity": "departments",
      "relationField": "name",
      "widget": "select",
      "required": true,
      "showInList": true
    },
    {
      "name": "contactNumber",
      "label": "Phone",
      "type": "string",
      "validation": { "pattern": "^[0-9]{10,15}$" },
      "placeholder": "+91 9876543210",
      "showInList": true
    },
    {
      "name": "email",
      "label": "Email",
      "type": "email",
      "showInList": true
    },
    {
      "name": "shiftSchedule",
      "label": "Shift Schedule",
      "type": "object",
      "widget": "schedule",
      "fields": [
        { "name": "shiftType", "label": "Shift Type", "type": "enum", "options": ["Morning", "Evening", "Night"] },
        { "name": "startTime", "label": "Start Time", "type": "time" },
        { "name": "endTime", "label": "End Time", "type": "time" }
      ]
    },
    {
      "name": "isActive",
      "label": "Active",
      "type": "boolean",
      "default": true,
      "widget": "toggle",
      "showInList": true,
      "filterable": true
    },
    {
      "name": "createdAt",
      "label": "Created At",
      "type": "datetime",
      "readOnly": true,
      "showInList": true,
      "sortable": true
    },
    {
      "name": "updatedAt",
      "label": "Updated At",
      "type": "datetime",
      "readOnly": true
    }
  ],

  "relations": [
    { "entity": "departments", "type": "ManyToOne", "foreignKey": "departmentId" },
    { "entity": "prescriptions", "type": "OneToMany", "foreignKey": "pharmacistId" },
    { "entity": "dispensations", "type": "OneToMany", "foreignKey": "pharmacistId" },
    { "entity": "inventorytransactions", "type": "OneToMany", "foreignKey": "pharmacistId" }
  ],

  "ui": {
    "listView": {
      "title": "Pharmacists Directory",
      "columns": ["pharmacistCode", "firstName", "lastName", "licenseNumber", "departmentId", "shiftSchedule.shiftType", "isActive"],
      "searchFields": ["pharmacistCode", "firstName", "lastName", "licenseNumber", "email"],
      "filters": ["licenseNumber", "departmentId", "isActive"],
      "actions": ["view", "edit", "delete"]
    },
    "formView": {
      "title": "Add / Edit Pharmacist",
      "layout": [
        ["pharmacistCode", "firstName", "lastName"],
        ["gender", "licenseNumber", "qualification"],
        ["experienceYears", "departmentId"],
        ["contactNumber", "email"],
        ["shiftSchedule"],
        ["isActive"]
      ],
      "actions": ["save", "reset", "cancel"]
    },
    "detailView": {
      "title": "Pharmacist Profile",
      "sections": [
        {
          "title": "Personal Information",
          "fields": ["pharmacistCode", "firstName", "lastName", "gender", "licenseNumber", "qualification", "experienceYears"]
        },
        {
          "title": "Work & Department",
          "fields": ["departmentId", "shiftSchedule.shiftType", "shiftSchedule.startTime", "shiftSchedule.endTime"]
        }
      ]
    }
  },

  "actions": [
    {
      "id": "addPharmacist",
      "label": "Add Pharmacist",
      "type": "create",
      "endpoint": "/api/pharmacists",
      "method": "POST",
      "successMessage": "Pharmacist added successfully"
    },
    {
      "id": "updatePharmacist",
      "label": "Update Pharmacist",
      "type": "edit",
      "endpoint": "/api/pharmacists/:id",
      "method": "PUT",
      "successMessage": "Pharmacist details updated"
    },
    {
      "id": "toggleStatus",
      "label": "Activate / Deactivate",
      "type": "toggle",
      "endpoint": "/api/pharmacists/:id/status",
      "method": "PATCH",
      "successMessage": "Pharmacist status updated"
    }
  ],

  "reasoning": {
    "businessLogic": "Pharmacists handle medicine inventory, verify prescriptions, and maintain dispensing logs. Each pharmacist is linked to a department and shift schedule to ensure continuous pharmacy operation.",
    "uiLogic": "Admin manages creation and updates. Pharmacists can view their schedule and assigned transactions. Integration points include Inventory and Prescription modules."
  }
}
