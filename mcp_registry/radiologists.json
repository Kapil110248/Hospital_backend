{
  "id": "radiologists",
  "title": "Radiologists",
  "description": "Manage radiologists responsible for diagnostic imaging and scan interpretation.",
  "route": "/radiologists",
  "icon": "ScanLine",
  "entity": "Radiologist",
  "version": "1.0.0",

  "permissions": {
    "view": ["Admin", "Receptionist", "Radiologist"],
    "create": ["Admin"],
    "edit": ["Admin", "Radiologist"],
    "delete": ["Admin"]
  },

  "api": {
    "list": "/api/radiologists",
    "get": "/api/radiologists/:id",
    "create": "/api/radiologists",
    "update": "/api/radiologists/:id",
    "delete": "/api/radiologists/:id"
  },

  "fields": [
    {
      "name": "id",
      "label": "Radiologist ID",
      "type": "uuid",
      "primary": true,
      "autoGenerated": true,
      "showInList": false
    },
    {
      "name": "radiologistCode",
      "label": "Radiologist Code",
      "type": "string",
      "required": true,
      "unique": true,
      "placeholder": "RAD-001",
      "showInList": true
    },
    {
      "name": "firstName",
      "label": "First Name",
      "type": "string",
      "required": true,
      "placeholder": "Enter first name",
      "showInList": true
    },
    {
      "name": "lastName",
      "label": "Last Name",
      "type": "string",
      "placeholder": "Enter last name",
      "showInList": true
    },
    {
      "name": "gender",
      "label": "Gender",
      "type": "enum",
      "options": ["MALE", "FEMALE", "OTHER"],
      "widget": "select",
      "required": true,
      "showInList": true
    },
    {
      "name": "qualification",
      "label": "Qualification",
      "type": "string",
      "placeholder": "MBBS, MD Radiology, DMRD",
      "showInList": true
    },
    {
      "name": "experienceYears",
      "label": "Experience (Years)",
      "type": "number",
      "default": 0,
      "min": 0,
      "max": 40,
      "showInList": true
    },
    {
      "name": "departmentId",
      "label": "Department",
      "type": "relation",
      "relationEntity": "departments",
      "relationField": "name",
      "widget": "select",
      "required": true,
      "showInList": true
    },
    {
      "name": "specialization",
      "label": "Specialization",
      "type": "enum",
      "options": ["MRI", "CT", "Ultrasound", "X-Ray", "Mammography"],
      "widget": "multiselect",
      "showInList": true,
      "filterable": true
    },
    {
      "name": "assignedLabId",
      "label": "Assigned Radiology Lab",
      "type": "relation",
      "relationEntity": "radiologylabs",
      "relationField": "labName",
      "widget": "select",
      "showInList": true
    },
    {
      "name": "contactNumber",
      "label": "Phone",
      "type": "string",
      "validation": { "pattern": "^[0-9]{10,15}$" },
      "placeholder": "+91 9876543210",
      "showInList": true
    },
    {
      "name": "email",
      "label": "Email",
      "type": "email",
      "showInList": true
    },
    {
      "name": "availability",
      "label": "Availability",
      "type": "enum",
      "options": ["Available", "On Leave", "Off Duty"],
      "widget": "select",
      "default": "Available",
      "showInList": true,
      "filterable": true
    },
    {
      "name": "shiftSchedule",
      "label": "Shift Schedule",
      "type": "object",
      "widget": "schedule",
      "fields": [
        { "name": "shiftType", "label": "Shift Type", "type": "enum", "options": ["Morning", "Evening", "Night"] },
        { "name": "startTime", "label": "Start Time", "type": "time" },
        { "name": "endTime", "label": "End Time", "type": "time" }
      ]
    },
    {
      "name": "isActive",
      "label": "Active",
      "type": "boolean",
      "default": true,
      "widget": "toggle",
      "showInList": true
    },
    {
      "name": "createdAt",
      "label": "Created At",
      "type": "datetime",
      "readOnly": true,
      "showInList": true
    },
    {
      "name": "updatedAt",
      "label": "Updated At",
      "type": "datetime",
      "readOnly": true
    }
  ],

  "relations": [
    { "entity": "departments", "type": "ManyToOne", "foreignKey": "departmentId" },
    { "entity": "radiologylabs", "type": "ManyToOne", "foreignKey": "assignedLabId" },
    { "entity": "radiologytests", "type": "OneToMany", "foreignKey": "radiologistId" },
    { "entity": "patients", "type": "ManyToMany", "foreignKey": "patientId" }
  ],

  "ui": {
    "listView": {
      "title": "Radiologists List",
      "columns": ["radiologistCode", "firstName", "lastName", "specialization", "departmentId", "availability", "isActive"],
      "searchFields": ["radiologistCode", "firstName", "lastName", "email", "specialization"],
      "filters": ["specialization", "departmentId", "availability", "isActive"],
      "actions": ["view", "edit", "delete"]
    },
    "formView": {
      "title": "Add / Edit Radiologist",
      "layout": [
        ["radiologistCode", "firstName", "lastName"],
        ["gender", "qualification", "experienceYears"],
        ["departmentId", "specialization", "assignedLabId"],
        ["contactNumber", "email", "availability"],
        ["shiftSchedule"],
        ["isActive"]
      ],
      "actions": ["save", "reset", "cancel"]
    },
    "detailView": {
      "title": "Radiologist Profile",
      "sections": [
        {
          "title": "Personal Details",
          "fields": ["radiologistCode", "firstName", "lastName", "gender", "qualification", "experienceYears"]
        },
        {
          "title": "Professional Info",
          "fields": ["departmentId", "specialization", "assignedLabId", "availability"]
        },
        {
          "title": "Schedule",
          "fields": ["shiftSchedule.shiftType", "shiftSchedule.startTime", "shiftSchedule.endTime"]
        }
      ]
    }
  },

  "actions": [
    {
      "id": "addRadiologist",
      "label": "Add Radiologist",
      "type": "create",
      "endpoint": "/api/radiologists",
      "method": "POST",
      "successMessage": "Radiologist added successfully"
    },
    {
      "id": "updateRadiologist",
      "label": "Update Radiologist",
      "type": "edit",
      "endpoint": "/api/radiologists/:id",
      "method": "PUT",
      "successMessage": "Radiologist details updated"
    },
    {
      "id": "toggleStatus",
      "label": "Activate / Deactivate",
      "type": "toggle",
      "endpoint": "/api/radiologists/:id/status",
      "method": "PATCH",
      "successMessage": "Radiologist status changed"
    }
  ],

  "reasoning": {
    "businessLogic": "Radiologists perform and interpret diagnostic imaging. They belong to a department and are assigned to a radiology lab for imaging studies.",
    "uiLogic": "The UI integrates with Radiology Tests and Patient records for managing reports and imaging assignments. Fields and relations are consistent with schema and wireframe flow."
  }
}
