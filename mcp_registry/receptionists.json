{
  "id": "receptionists",
  "title": "Receptionists",
  "description": "Registry for receptionists responsible for front-desk operations, patient check-in, scheduling, and communication management.",
  "route": "/receptionists",
  "icon": "UserSquare2",
  "entity": "Receptionist",
  "version": "1.0.0",

  "permissions": {
    "view": ["Admin", "Receptionist"],
    "create": ["Admin"],
    "edit": ["Admin"],
    "delete": ["Admin"]
  },

  "api": {
    "list": "/api/receptionists",
    "get": "/api/receptionists/:id",
    "create": "/api/receptionists",
    "update": "/api/receptionists/:id",
    "delete": "/api/receptionists/:id"
  },

  "fields": [
    {
      "name": "id",
      "label": "Receptionist ID",
      "type": "uuid",
      "primary": true,
      "autoGenerated": true,
      "showInList": false
    },
    {
      "name": "receptionistCode",
      "label": "Receptionist Code",
      "type": "string",
      "required": true,
      "unique": true,
      "placeholder": "REC-001",
      "showInList": true,
      "sortable": true
    },
    {
      "name": "firstName",
      "label": "First Name",
      "type": "string",
      "required": true,
      "placeholder": "Enter first name",
      "showInList": true
    },
    {
      "name": "lastName",
      "label": "Last Name",
      "type": "string",
      "placeholder": "Enter last name",
      "showInList": true
    },
    {
      "name": "gender",
      "label": "Gender",
      "type": "enum",
      "options": ["MALE", "FEMALE", "OTHER"],
      "widget": "select",
      "required": true,
      "showInList": true
    },
    {
      "name": "contactNumber",
      "label": "Contact Number",
      "type": "string",
      "validation": { "pattern": "^[0-9]{10,15}$" },
      "placeholder": "+91 9876543210",
      "showInList": true
    },
    {
      "name": "email",
      "label": "Email",
      "type": "email",
      "showInList": true
    },
    {
      "name": "departmentId",
      "label": "Department",
      "type": "relation",
      "relationEntity": "departments",
      "relationField": "name",
      "widget": "select",
      "required": true,
      "showInList": true
    },
    {
      "name": "shiftSchedule",
      "label": "Shift Schedule",
      "type": "object",
      "widget": "schedule",
      "fields": [
        { "name": "shiftType", "label": "Shift Type", "type": "enum", "options": ["Morning", "Evening", "Night"] },
        { "name": "startTime", "label": "Start Time", "type": "time" },
        { "name": "endTime", "label": "End Time", "type": "time" }
      ]
    },
    {
      "name": "assignedDesk",
      "label": "Assigned Desk",
      "type": "enum",
      "options": ["Main Lobby", "Emergency Desk", "Outpatient Desk", "Inpatient Counter"],
      "widget": "select",
      "showInList": true
    },
    {
      "name": "experienceYears",
      "label": "Experience (Years)",
      "type": "number",
      "min": 0,
      "max": 40,
      "default": 0,
      "showInList": true
    },
    {
      "name": "isActive",
      "label": "Active",
      "type": "boolean",
      "default": true,
      "widget": "toggle",
      "showInList": true,
      "filterable": true
    },
    {
      "name": "createdAt",
      "label": "Created At",
      "type": "datetime",
      "readOnly": true,
      "showInList": true,
      "sortable": true
    },
    {
      "name": "updatedAt",
      "label": "Updated At",
      "type": "datetime",
      "readOnly": true
    }
  ],

  "relations": [
    { "entity": "departments", "type": "ManyToOne", "foreignKey": "departmentId" },
    { "entity": "appointments", "type": "OneToMany", "foreignKey": "receptionistId" },
    { "entity": "patients", "type": "OneToMany", "foreignKey": "createdBy" }
  ],

  "ui": {
    "listView": {
      "title": "Receptionists Directory",
      "columns": ["receptionistCode", "firstName", "lastName", "departmentId", "assignedDesk", "shiftSchedule.shiftType", "isActive"],
      "searchFields": ["receptionistCode", "firstName", "lastName", "email"],
      "filters": ["departmentId", "assignedDesk", "isActive"],
      "actions": ["view", "edit", "delete"]
    },
    "formView": {
      "title": "Add / Edit Receptionist",
      "layout": [
        ["receptionistCode", "firstName", "lastName"],
        ["gender", "contactNumber", "email"],
        ["departmentId", "assignedDesk", "experienceYears"],
        ["shiftSchedule"],
        ["isActive"]
      ],
      "actions": ["save", "reset", "cancel"]
    },
    "detailView": {
      "title": "Receptionist Profile",
      "sections": [
        {
          "title": "Personal Info",
          "fields": ["receptionistCode", "firstName", "lastName", "gender", "contactNumber", "email"]
        },
        {
          "title": "Work Details",
          "fields": ["departmentId", "assignedDesk", "experienceYears"]
        },
        {
          "title": "Shift Information",
          "fields": ["shiftSchedule.shiftType", "shiftSchedule.startTime", "shiftSchedule.endTime"]
        }
      ]
    }
  },

  "actions": [
    {
      "id": "addReceptionist",
      "label": "Add Receptionist",
      "type": "create",
      "endpoint": "/api/receptionists",
      "method": "POST",
      "successMessage": "Receptionist added successfully"
    },
    {
      "id": "updateReceptionist",
      "label": "Update Receptionist",
      "type": "edit",
      "endpoint": "/api/receptionists/:id",
      "method": "PUT",
      "successMessage": "Receptionist details updated"
    },
    {
      "id": "toggleStatus",
      "label": "Activate / Deactivate",
      "type": "toggle",
      "endpoint": "/api/receptionists/:id/status",
      "method": "PATCH",
      "successMessage": "Receptionist status updated"
    }
  ],

  "reasoning": {
    "businessLogic": "Receptionists are key staff managing the hospital's patient flow. They handle appointments, check-ins, and coordination with departments. This entity links to Appointments and Patients for end-to-end workflow.",
    "uiLogic": "The UI displays all receptionists with desk assignment and shifts. Admins can manage staff records and update shifts using auto-generated Bolt UI forms from this registry."
  }
}
