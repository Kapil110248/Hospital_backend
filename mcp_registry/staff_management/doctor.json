{
  "id": "doctors",
  "title": "Doctors Registry",
  "description": "Maintains doctor profiles, specialization, qualifications, schedule, and availability for appointments.",
  "route": "/doctors",
  "icon": "Stethoscope",
  "entity": "Doctor",
  "version": "1.0.0",

  "permissions": {
    "view": ["Admin", "Receptionist", "Doctor"],
    "create": ["Admin", "HR"],
    "edit": ["Admin", "HR"],
    "delete": ["Admin"]
  },

  "api": {
    "list": "/api/doctors",
    "get": "/api/doctors/:id",
    "create": "/api/doctors",
    "update": "/api/doctors/:id",
    "delete": "/api/doctors/:id"
  },

  "fields": [
    { "name": "id", "label": "Doctor ID", "type": "uuid", "autoGenerated": true, "primary": true },
    { "name": "doctorCode", "label": "Doctor Code", "type": "string", "unique": true, "placeholder": "DR-0001", "showInList": true },
    { "name": "fullName", "label": "Full Name", "type": "string", "required": true, "showInList": true },
    { "name": "specialization", "label": "Specialization", "type": "string", "required": true, "showInList": true, "filterable": true },
    { "name": "qualification", "label": "Qualification", "type": "string", "showInList": false },
    { "name": "departmentId", "label": "Department", "type": "relation", "relationEntity": "departments", "relationField": "name", "required": true, "showInList": true },
    { "name": "experienceYears", "label": "Experience (Years)", "type": "number", "showInList": true },
    { "name": "consultationFee", "label": "Consultation Fee (â‚¹)", "type": "number", "default": 0, "showInList": true },
    { "name": "contactNumber", "label": "Phone", "type": "string", "showInList": true },
    { "name": "email", "label": "Email", "type": "email" },
    { "name": "shiftStart", "label": "Shift Start", "type": "time", "showInList": true },
    { "name": "shiftEnd", "label": "Shift End", "type": "time", "showInList": true },
    { "name": "availabilityDays", "label": "Available Days", "type": "array", "options": ["Mon","Tue","Wed","Thu","Fri","Sat"], "widget": "checkbox-list" },
    { "name": "photoUrl", "label": "Profile Photo", "type": "image", "showInList": false },
    { "name": "status", "label": "Status", "type": "enum", "options": ["ACTIVE", "ON_LEAVE", "INACTIVE"], "default": "ACTIVE", "widget": "badge", "showInList": true },
    { "name": "createdAt", "label": "Created At", "type": "datetime", "readOnly": true },
    { "name": "updatedAt", "label": "Updated At", "type": "datetime", "readOnly": true }
  ],

  "relations": [
    { "entity": "departments", "type": "ManyToOne", "foreignKey": "departmentId" },
    { "entity": "appointments", "type": "OneToMany", "foreignKey": "doctorId" },
    { "entity": "consultations", "type": "OneToMany", "foreignKey": "doctorId" }
  ],

  "ui": {
    "listView": {
      "title": "Doctors Directory",
      "columns": ["doctorCode", "fullName", "specialization", "departmentId", "experienceYears", "consultationFee", "status"],
      "filters": ["specialization", "departmentId", "status"],
      "searchFields": ["fullName", "doctorCode", "specialization"],
      "actions": ["view", "edit", "delete"]
    },

    "formView": {
      "title": "Add / Edit Doctor",
      "layout": [
        ["doctorCode", "fullName"],
        ["specialization", "qualification", "experienceYears"],
        ["departmentId", "consultationFee"],
        ["availabilityDays", "shiftStart", "shiftEnd"],
        ["contactNumber", "email"],
        ["status"]
      ],
      "actions": [
        {
          "id": "saveDoctor",
          "label": "Save Doctor",
          "type": "submit",
          "endpoint": "/api/doctors",
          "method": "POST",
          "successMessage": "Doctor saved successfully!"
        },
        { "id": "cancel", "label": "Cancel", "type": "cancel" }
      ]
    },

    "detailView": {
      "title": "Doctor Details",
      "sections": [
        { "title": "Profile", "fields": ["fullName", "specialization", "qualification", "departmentId", "experienceYears"] },
        { "title": "Availability", "fields": ["shiftStart", "shiftEnd", "availabilityDays"] },
        { "title": "Contact", "fields": ["contactNumber", "email"] },
        { "title": "Status", "fields": ["status"] },
        { "title": "Timestamps", "fields": ["createdAt", "updatedAt"] }
      ]
    }
  },

  "actions": [
    {
      "id": "viewAppointments",
      "label": "View Appointments",
      "type": "link",
      "to": "/appointments?doctorId={{id}}"
    },
    {
      "id": "assignToDepartment",
      "label": "Assign Department",
      "type": "link",
      "to": "/departments/assign?doctorId={{id}}"
    }
  ],

  "reasoning": {
    "businessLogic": "Doctors are the primary medical providers in the hospital. Their profile links directly to appointments, departments, and consultations. Each doctor can have different shift timings and fee structures.",
    "uiLogic": "The UI allows easy lookup by specialization or department. Receptionists can check availability instantly when booking appointments."
  }
}
