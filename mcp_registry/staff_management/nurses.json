{
  "id": "nurses",
  "title": "Nurse Registry",
  "description": "Manages nurse profiles, shift types, department assignments, and employment details. Used for scheduling and ward allocation.",
  "route": "/nurses",
  "icon": "HeartPulse",
  "entity": "Nurse",
  "version": "1.0.0",

  "permissions": {
    "view": ["Admin", "HR", "Doctor"],
    "create": ["Admin", "HR"],
    "edit": ["Admin", "HR"],
    "delete": ["Admin"]
  },

  "api": {
    "list": "/api/nurses",
    "get": "/api/nurses/:id",
    "create": "/api/nurses",
    "update": "/api/nurses/:id",
    "delete": "/api/nurses/:id"
  },

  "fields": [
    { "name": "id", "label": "Nurse ID", "type": "uuid", "autoGenerated": true, "primary": true },
    { "name": "employeeCode", "label": "Employee Code", "type": "string", "unique": true, "placeholder": "NUR-0001", "required": true, "showInList": true },
    { "name": "fullName", "label": "Full Name", "type": "string", "required": true, "showInList": true },
    { "name": "departmentId", "label": "Department", "type": "relation", "relationEntity": "departments", "relationField": "name", "required": true, "showInList": true },
    { "name": "shiftType", "label": "Shift Type", "type": "enum", "options": ["DAY", "NIGHT", "ROTATIONAL"], "widget": "select", "required": true, "showInList": true },
    { "name": "assignedWard", "label": "Assigned Ward", "type": "string", "placeholder": "Ward A / ICU / OPD", "showInList": true },
    { "name": "contactNumber", "label": "Contact Number", "type": "string", "required": true, "showInList": true },
    { "name": "email", "label": "Email", "type": "email", "placeholder": "example@email.com" },
    { "name": "qualification", "label": "Qualification", "type": "string", "placeholder": "BSc Nursing / GNM" },
    { "name": "joiningDate", "label": "Joining Date", "type": "date", "showInList": true },
    { "name": "status", "label": "Status", "type": "enum", "options": ["ACTIVE", "ON_LEAVE", "INACTIVE"], "default": "ACTIVE", "widget": "badge", "showInList": true },
    { "name": "photoUrl", "label": "Profile Photo", "type": "image" },
    { "name": "createdAt", "label": "Created At", "type": "datetime", "readOnly": true },
    { "name": "updatedAt", "label": "Updated At", "type": "datetime", "readOnly": true }
  ],

  "relations": [
    { "entity": "departments", "type": "ManyToOne", "foreignKey": "departmentId" },
    { "entity": "staffattendance", "type": "OneToMany", "foreignKey": "nurseId" },
    { "entity": "dutyroster", "type": "OneToMany", "foreignKey": "nurseId" }
  ],

  "ui": {
    "listView": {
      "title": "Nurse Directory",
      "columns": ["employeeCode", "fullName", "departmentId", "shiftType", "assignedWard", "status"],
      "filters": ["departmentId", "shiftType", "status"],
      "searchFields": ["fullName", "employeeCode"],
      "actions": ["view", "edit", "delete"]
    },

    "formView": {
      "title": "Add / Edit Nurse",
      "layout": [
        ["employeeCode", "fullName"],
        ["departmentId", "assignedWard"],
        ["shiftType", "qualification"],
        ["contactNumber", "email"],
        ["joiningDate", "status"]
      ],
      "actions": [
        {
          "id": "saveNurse",
          "label": "Save Nurse",
          "type": "submit",
          "endpoint": "/api/nurses",
          "method": "POST",
          "successMessage": "Nurse saved successfully!"
        },
        { "id": "cancel", "label": "Cancel", "type": "cancel" }
      ]
    },

    "detailView": {
      "title": "Nurse Details",
      "sections": [
        { "title": "Personal Info", "fields": ["employeeCode", "fullName", "qualification", "contactNumber", "email"] },
        { "title": "Work Details", "fields": ["departmentId", "assignedWard", "shiftType", "status", "joiningDate"] },
        { "title": "Timestamps", "fields": ["createdAt", "updatedAt"] }
      ]
    }
  },

  "actions": [
    {
      "id": "viewAttendance",
      "label": "View Attendance",
      "type": "link",
      "to": "/attendance?nurseId={{id}}"
    },
    {
      "id": "assignDuty",
      "label": "Assign Duty",
      "type": "link",
      "to": "/dutyroster/assign?nurseId={{id}}"
    }
  ],

  "reasoning": {
    "businessLogic": "Nurses form the backbone of ward operations. This registry allows HR and Admin to manage their schedules, departments, and attendance.",
    "uiLogic": "List view helps supervisors track shift allocation. Nurse details link directly to attendance and duty roster modules for operational continuity."
  }
}
