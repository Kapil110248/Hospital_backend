{
  "id": "pharmacists",
  "title": "Pharmacist Registry",
  "description": "Maintains pharmacist profiles, licenses, and assigned pharmacy branches for prescription handling and inventory verification.",
  "route": "/pharmacists",
  "icon": "Pill",
  "entity": "Pharmacist",
  "version": "1.0.0",

  "permissions": {
    "view": ["Admin", "HR", "PharmacyManager"],
    "create": ["Admin", "HR"],
    "edit": ["Admin", "HR"],
    "delete": ["Admin"]
  },

  "api": {
    "list": "/api/pharmacists",
    "get": "/api/pharmacists/:id",
    "create": "/api/pharmacists",
    "update": "/api/pharmacists/:id",
    "delete": "/api/pharmacists/:id"
  },

  "fields": [
    { "name": "id", "type": "uuid", "primary": true, "autoGenerated": true },
    { "name": "employeeCode", "label": "Employee Code", "type": "string", "unique": true, "required": true, "showInList": true },
    { "name": "fullName", "label": "Full Name", "type": "string", "required": true, "showInList": true },
    { "name": "licenseNumber", "label": "License Number", "type": "string", "required": true, "showInList": true },
    { "name": "pharmacyBranchId", "label": "Assigned Branch", "type": "relation", "relationEntity": "departments", "relationField": "name", "showInList": true },
    { "name": "email", "label": "Email", "type": "email" },
    { "name": "contactNumber", "label": "Contact Number", "type": "string", "showInList": true },
    { "name": "shiftType", "label": "Shift Type", "type": "enum", "options": ["DAY", "NIGHT", "ROTATIONAL"], "widget": "select", "showInList": true },
    { "name": "status", "label": "Status", "type": "enum", "options": ["ACTIVE", "INACTIVE"], "default": "ACTIVE", "widget": "badge", "showInList": true },
    { "name": "createdAt", "label": "Created At", "type": "datetime", "readOnly": true }
  ],

  "relations": [
    { "entity": "departments", "type": "ManyToOne", "foreignKey": "pharmacyBranchId" },
    { "entity": "pharmacystock", "type": "OneToMany", "foreignKey": "pharmacistId" }
  ],

  "ui": {
    "listView": {
      "title": "Pharmacist Directory",
      "columns": ["employeeCode", "fullName", "licenseNumber", "pharmacyBranchId", "status"],
      "filters": ["status", "pharmacyBranchId"],
      "searchFields": ["fullName", "licenseNumber"]
    },
    "formView": {
      "title": "Add / Edit Pharmacist",
      "layout": [
        ["employeeCode", "fullName"],
        ["licenseNumber", "pharmacyBranchId"],
        ["email", "contactNumber"],
        ["shiftType", "status"]
      ],
      "actions": ["save", "cancel"]
    }
  },

  "reasoning": {
    "businessLogic": "Each pharmacist must be verified with a license and assigned to a pharmacy branch. This ensures accountability for drug dispensation.",
    "uiLogic": "The pharmacist list is filterable by branch and shift to simplify scheduling and compliance tracking."
  }
}
