{
  "id": "systemsettings",
  "title": "System Settings",
  "description": "Global hospital system configuration including branding, preferences, and operational defaults.",
  "route": "/settings/system",
  "icon": "Settings",
  "entity": "SystemSetting",
  "version": "1.0.0",

  "permissions": {
    "view": ["Admin"],
    "edit": ["Admin"]
  },

  "api": {
    "list": "/api/settings/system",
    "get": "/api/settings/system/:id",
    "update": "/api/settings/system/:id"
  },

  "fields": [
    {
      "name": "id",
      "label": "Setting ID",
      "type": "uuid",
      "primary": true,
      "autoGenerated": true
    },
    {
      "name": "hospitalName",
      "label": "Hospital Name",
      "type": "string",
      "placeholder": "Enter hospital name",
      "required": true,
      "showInList": true
    },
    {
      "name": "hospitalLogo",
      "label": "Hospital Logo",
      "type": "file",
      "widget": "image-upload",
      "accept": ["image/png", "image/jpeg"],
      "showInList": false
    },
    {
      "name": "address",
      "label": "Address",
      "type": "text",
      "placeholder": "Hospital address (Street, City, State, Zip)",
      "showInList": false
    },
    {
      "name": "contactNumber",
      "label": "Contact Number",
      "type": "string",
      "placeholder": "+91 9876543210",
      "validation": { "pattern": "^[0-9]{10,15}$" },
      "showInList": false
    },
    {
      "name": "email",
      "label": "Official Email",
      "type": "email",
      "placeholder": "info@hospital.com",
      "showInList": false
    },
    {
      "name": "currency",
      "label": "Currency Symbol",
      "type": "enum",
      "options": ["₹", "$", "€", "£"],
      "default": "₹",
      "widget": "select",
      "showInList": true
    },
    {
      "name": "timezone",
      "label": "Timezone",
      "type": "enum",
      "options": [
        "Asia/Kolkata",
        "Asia/Dubai",
        "Europe/London",
        "America/New_York"
      ],
      "default": "Asia/Kolkata",
      "widget": "select",
      "showInList": true
    },
    {
      "name": "language",
      "label": "Default Language",
      "type": "enum",
      "options": ["en", "hi", "fr", "ar"],
      "default": "en",
      "widget": "select"
    },
    {
      "name": "themeMode",
      "label": "Theme Mode",
      "type": "enum",
      "options": ["light", "dark", "auto"],
      "default": "dark",
      "widget": "select"
    },
    {
      "name": "notificationEmail",
      "label": "Email Notifications",
      "type": "boolean",
      "default": true,
      "widget": "toggle"
    },
    {
      "name": "notificationSMS",
      "label": "SMS Notifications",
      "type": "boolean",
      "default": false,
      "widget": "toggle"
    },
    {
      "name": "backupFrequency",
      "label": "Data Backup Frequency",
      "type": "enum",
      "options": ["DAILY", "WEEKLY", "MONTHLY"],
      "default": "DAILY",
      "widget": "select"
    },
    {
      "name": "createdAt",
      "label": "Created At",
      "type": "datetime",
      "readOnly": true,
      "showInList": true
    },
    {
      "name": "updatedAt",
      "label": "Last Updated",
      "type": "datetime",
      "readOnly": true
    }
  ],

  "ui": {
    "formView": {
      "title": "System Settings",
      "layout": [
        ["hospitalName", "hospitalLogo"],
        ["address"],
        ["contactNumber", "email"],
        ["currency", "timezone", "language"],
        ["themeMode"],
        ["notificationEmail", "notificationSMS"],
        ["backupFrequency"]
      ],
      "actions": [
        {
          "id": "updateSettings",
          "label": "Save Changes",
          "type": "submit",
          "endpoint": "/api/settings/system/:id",
          "method": "PUT",
          "successMessage": "Settings updated successfully!"
        },
        {
          "id": "cancel",
          "label": "Cancel",
          "type": "cancel"
        }
      ]
    },
    "detailView": {
      "title": "Current System Settings",
      "sections": [
        {
          "title": "General",
          "fields": [
            "hospitalName",
            "hospitalLogo",
            "address",
            "contactNumber",
            "email"
          ]
        },
        {
          "title": "Preferences",
          "fields": [
            "currency",
            "timezone",
            "language",
            "themeMode",
            "backupFrequency"
          ]
        },
        {
          "title": "Notifications",
          "fields": ["notificationEmail", "notificationSMS"]
        },
        {
          "title": "Meta Info",
          "fields": ["createdAt", "updatedAt"]
        }
      ]
    }
  },

  "actions": [
    {
      "id": "updateSettings",
      "label": "Update Settings",
      "type": "edit",
      "endpoint": "/api/settings/system/:id",
      "method": "PUT",
      "successMessage": "System settings updated successfully!"
    },
    {
      "id": "resetSettings",
      "label": "Reset to Default",
      "type": "action",
      "endpoint": "/api/settings/system/reset",
      "method": "POST",
      "confirmation": "Are you sure you want to reset all system settings to default?",
      "successMessage": "System settings reset successfully!"
    }
  ],

  "reasoning": {
    "businessLogic": "The hospital’s branding, contact details, and functional configurations (currency, timezone, theme, notifications) are globally managed here. These settings control how the system behaves and appears across all modules.",
    "uiLogic": "Admins can change hospital info, notification preferences, and theme settings in a simple form. Changes update live through MCP context so all modules instantly reflect new configurations."
    
  }
}
