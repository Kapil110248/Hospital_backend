{
  "id": "themes",
  "title": "Theme Manager",
  "description": "Manages the system’s appearance settings, including dark mode, accent colors, and typography.",
  "route": "/settings/themes",
  "icon": "Palette",
  "entity": "ThemeSetting",
  "version": "1.0.0",

  "permissions": {
    "view": ["Admin"],
    "edit": ["Admin"]
  },

  "api": {
    "list": "/api/settings/themes",
    "get": "/api/settings/themes/:id",
    "update": "/api/settings/themes/:id"
  },

  "fields": [
    {
      "name": "id",
      "label": "Theme ID",
      "type": "uuid",
      "primary": true,
      "autoGenerated": true
    },
    {
      "name": "themeName",
      "label": "Theme Name",
      "type": "string",
      "placeholder": "e.g. Hospital Blue, Emerald Green",
      "required": true,
      "showInList": true
    },
    {
      "name": "mode",
      "label": "Mode",
      "type": "enum",
      "options": ["light", "dark", "auto"],
      "default": "dark",
      "widget": "select",
      "showInList": true
    },
    {
      "name": "primaryColor",
      "label": "Primary Accent Color",
      "type": "color",
      "default": "#1E40AF",
      "widget": "color-picker",
      "showInList": true
    },
    {
      "name": "secondaryColor",
      "label": "Secondary Accent Color",
      "type": "color",
      "default": "#3B82F6",
      "widget": "color-picker",
      "showInList": false
    },
    {
      "name": "backgroundColor",
      "label": "Background Color",
      "type": "color",
      "default": "#0F172A",
      "widget": "color-picker",
      "showInList": false
    },
    {
      "name": "textColor",
      "label": "Text Color",
      "type": "color",
      "default": "#F1F5F9",
      "widget": "color-picker",
      "showInList": false
    },
    {
      "name": "fontFamily",
      "label": "Font Family",
      "type": "enum",
      "options": ["Inter", "Poppins", "Roboto", "Open Sans", "Nunito"],
      "default": "Inter",
      "widget": "select",
      "showInList": true
    },
    {
      "name": "borderRadius",
      "label": "Border Radius (UI elements)",
      "type": "enum",
      "options": ["none", "sm", "md", "lg", "xl", "2xl"],
      "default": "xl",
      "widget": "select",
      "showInList": true
    },
    {
      "name": "shadowStyle",
      "label": "Shadow Depth",
      "type": "enum",
      "options": ["none", "sm", "md", "lg"],
      "default": "md",
      "widget": "select"
    },
    {
      "name": "animationStyle",
      "label": "Animation Style",
      "type": "enum",
      "options": ["fade", "slide", "zoom", "none"],
      "default": "fade",
      "widget": "select"
    },
    {
      "name": "isActive",
      "label": "Active Theme",
      "type": "boolean",
      "default": true,
      "widget": "toggle",
      "showInList": true
    },
    {
      "name": "previewImage",
      "label": "Theme Preview",
      "type": "file",
      "widget": "image-upload",
      "accept": ["image/png", "image/jpeg"],
      "showInList": false
    },
    {
      "name": "createdAt",
      "label": "Created At",
      "type": "datetime",
      "readOnly": true,
      "showInList": true
    },
    {
      "name": "updatedAt",
      "label": "Updated At",
      "type": "datetime",
      "readOnly": true
    }
  ],

  "ui": {
    "listView": {
      "title": "Available Themes",
      "columns": ["themeName", "mode", "fontFamily", "borderRadius", "isActive"],
      "filters": ["mode", "fontFamily", "isActive"],
      "searchFields": ["themeName"],
      "actions": ["view", "edit"]
    },
    "formView": {
      "title": "Customize Theme",
      "layout": [
        ["themeName", "mode"],
        ["primaryColor", "secondaryColor"],
        ["backgroundColor", "textColor"],
        ["fontFamily", "borderRadius"],
        ["shadowStyle", "animationStyle"],
        ["isActive", "previewImage"]
      ],
      "actions": [
        {
          "id": "saveTheme",
          "label": "Save Theme",
          "type": "submit",
          "endpoint": "/api/settings/themes/:id",
          "method": "PUT",
          "successMessage": "Theme updated successfully!"
        },
        { "id": "cancel", "label": "Cancel", "type": "cancel" }
      ]
    },
    "detailView": {
      "title": "Theme Details",
      "sections": [
        {
          "title": "Appearance Settings",
          "fields": [
            "themeName",
            "mode",
            "primaryColor",
            "secondaryColor",
            "backgroundColor",
            "textColor",
            "fontFamily"
          ]
        },
        {
          "title": "Preview & Meta",
          "fields": ["previewImage", "createdAt", "updatedAt"]
        }
      ]
    }
  },

  "actions": [
    {
      "id": "applyTheme",
      "label": "Apply Theme",
      "type": "action",
      "endpoint": "/api/settings/themes/:id/apply",
      "method": "POST",
      "successMessage": "Theme applied successfully!"
    },
    {
      "id": "duplicateTheme",
      "label": "Duplicate Theme",
      "type": "action",
      "endpoint": "/api/settings/themes/:id/duplicate",
      "method": "POST",
      "successMessage": "Theme duplicated successfully!"
    }
  ],

  "reasoning": {
    "businessLogic": "Themes enable visual customization of the hospital system to align with branding and staff preferences. Admins can toggle between light and dark themes or create custom accent colors for better usability.",
    "uiLogic": "The theme manager provides real-time previews and can apply or duplicate themes instantly. It integrates with the frontend’s theme context so changes propagate dynamically without reload."
  }
}
